@{
  Layout = "_Layout";
}

@using AnimalShelter.Models;
@model List<AnimalShelter.Models.Animal>;

<h1>Animals</h1>

@if (@Model.Count == 0)
{
  <h3>No animals have been added yet!</h3>
} 

@foreach (Animal animal in Model)
{
  <li>@Html.ActionLink($"ID: {animal.AnimalId}, Type: {animal.Type}, Name: {animal.Name} ","Details", new { id = animal.AnimalId })</li>
}

<p>@Html.ActionLink("Add new animal", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>